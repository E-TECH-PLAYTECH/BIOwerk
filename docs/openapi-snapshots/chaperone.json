{
  "openapi": "3.1.0",
  "info": {
    "title": "Chaperone",
    "version": "1.0.0"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health check (liveness probe)",
        "description": "Returns the health status of the service. Used by orchestrators to detect if service is alive.",
        "operationId": "health_endpoint_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Readiness check (readiness probe)",
        "description": "Returns the readiness status of the service. Used by orchestrators to determine if service can accept traffic.",
        "operationId": "readiness_endpoint_ready_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/import_artifact": {
      "post": {
        "summary": "Import Artifact V1",
        "description": "Import Artifact endpoint (API v1).",
        "operationId": "import_artifact_v1_v1_import_artifact_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "markdown_ingest": {
                  "summary": "Ingest markdown notes",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "chaperone",
                    "intent": "import_artifact",
                    "input": {
                      "format": "markdown",
                      "artifact_type": "osteon",
                      "content": "# Launch runbook\n- Validate metrics burn rates\n- Confirm rollback rehearsals completed"
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/export_artifact": {
      "post": {
        "summary": "Export Artifact V1",
        "description": "Export Artifact endpoint (API v1).",
        "operationId": "export_artifact_v1_v1_export_artifact_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "pdf_export": {
                  "summary": "Export an osteon artifact to PDF",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "chaperone",
                    "intent": "export_artifact",
                    "input": {
                      "format": "pdf",
                      "artifact": {
                        "kind": "osteon",
                        "meta": {
                          "title": "Launch Readiness Narrative"
                        },
                        "body": {
                          "sections": [
                            {
                              "id": "intro",
                              "title": "Executive summary",
                              "text": "BIOwerk is ready for launch."
                            },
                            {
                              "id": "risks",
                              "title": "Risks",
                              "text": "Traffic spikes, database lag"
                            }
                          ]
                        }
                      }
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/import_artifact": {
      "post": {
        "summary": "Import Artifact Legacy",
        "description": "DEPRECATED: Use /v1/import_artifact instead.\nImport Artifact endpoint.",
        "operationId": "import_artifact_legacy_import_artifact_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "markdown_ingest": {
                  "summary": "Ingest markdown notes",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "chaperone",
                    "intent": "import_artifact",
                    "input": {
                      "format": "markdown",
                      "artifact_type": "osteon",
                      "content": "# Launch runbook\n- Validate metrics burn rates\n- Confirm rollback rehearsals completed"
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "deprecated": true
      }
    },
    "/export_artifact": {
      "post": {
        "summary": "Export Artifact Legacy",
        "description": "DEPRECATED: Use /v1/export_artifact instead.\nExport Artifact endpoint.",
        "operationId": "export_artifact_legacy_export_artifact_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "pdf_export": {
                  "summary": "Export an osteon artifact to PDF",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "chaperone",
                    "intent": "export_artifact",
                    "input": {
                      "format": "pdf",
                      "artifact": {
                        "kind": "osteon",
                        "meta": {
                          "title": "Launch Readiness Narrative"
                        },
                        "body": {
                          "sections": [
                            {
                              "id": "intro",
                              "title": "Executive summary",
                              "text": "BIOwerk is ready for launch."
                            },
                            {
                              "id": "risks",
                              "title": "Risks",
                              "text": "Traffic spikes, database lag"
                            }
                          ]
                        }
                      }
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "deprecated": true
      }
    }
  },
  "components": {
    "schemas": {
      "ComponentHealth": {
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "status": {
            "$ref": "#/components/schemas/HealthStatus"
          },
          "message": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Message"
          },
          "latency_ms": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "type": "null"
              }
            ],
            "title": "Latency Ms"
          },
          "metadata": {
            "type": "object",
            "title": "Metadata"
          },
          "timestamp": {
            "type": "number",
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": [
          "name",
          "status"
        ],
        "title": "ComponentHealth",
        "description": "Health status for a single component."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "HealthCheckResponse": {
        "properties": {
          "status": {
            "$ref": "#/components/schemas/HealthStatus"
          },
          "service": {
            "type": "string",
            "title": "Service"
          },
          "version": {
            "type": "string",
            "title": "Version",
            "default": "1.0.0"
          },
          "timestamp": {
            "type": "number",
            "title": "Timestamp"
          },
          "uptime_seconds": {
            "type": "number",
            "title": "Uptime Seconds"
          },
          "checks": {
            "items": {
              "$ref": "#/components/schemas/ComponentHealth"
            },
            "type": "array",
            "title": "Checks"
          },
          "metadata": {
            "type": "object",
            "title": "Metadata"
          }
        },
        "type": "object",
        "required": [
          "status",
          "service",
          "uptime_seconds",
          "checks"
        ],
        "title": "HealthCheckResponse",
        "description": "Complete health check response."
      },
      "HealthStatus": {
        "type": "string",
        "enum": [
          "healthy",
          "unhealthy",
          "degraded",
          "unknown"
        ],
        "title": "HealthStatus",
        "description": "Health check status values."
      },
      "Msg": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "ts": {
            "type": "number",
            "title": "Ts"
          },
          "origin": {
            "type": "string",
            "title": "Origin"
          },
          "target": {
            "type": "string",
            "title": "Target"
          },
          "intent": {
            "type": "string",
            "title": "Intent"
          },
          "input": {
            "type": "object",
            "title": "Input",
            "default": {}
          },
          "api_version": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Api Version",
            "description": "API version for this message. Defaults to v1 for backward compatibility.",
            "default": "v1"
          }
        },
        "type": "object",
        "required": [
          "origin",
          "target",
          "intent"
        ],
        "title": "Msg"
      },
      "Reply": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "ts": {
            "type": "number",
            "title": "Ts"
          },
          "agent": {
            "type": "string",
            "title": "Agent"
          },
          "ok": {
            "type": "boolean",
            "title": "Ok"
          },
          "output": {
            "type": "object",
            "title": "Output"
          },
          "state_hash": {
            "type": "string",
            "title": "State Hash"
          },
          "api_version": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Api Version",
            "description": "API version used to generate this reply. Matches the request version.",
            "default": "v1"
          }
        },
        "type": "object",
        "required": [
          "id",
          "ts",
          "agent",
          "ok",
          "output",
          "state_hash"
        ],
        "title": "Reply"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}