  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Health check (liveness probe)",
        "description": "Returns the health status of the service. Used by orchestrators to detect if service is alive.",
        "operationId": "health_endpoint_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "tags": [
          "Health"
        ],
        "summary": "Readiness check (readiness probe)",
        "description": "Returns the readiness status of the service. Used by orchestrators to determine if service can accept traffic.",
        "operationId": "readiness_endpoint_ready_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheckResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/outline": {
      "post": {
        "summary": "Outline V1",
        "description": "Generate a structured outline for a document based on the goal/topic (API v1).",
        "operationId": "outline_v1_v1_outline_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "launch_brief": {
                  "summary": "Outline a reliability one-pager",
                  "description": "Shows the minimal payload needed to seed an outline with topic and context.",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "osteon",
                    "intent": "outline",
                    "input": {
                      "goal": "Outline a one-pager on platform reliability",
                      "topic": "Reliability narrative for Q4 launch",
                      "context": "Audience is the SRE steering group. Focus on uptime and rollback drills."
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/draft": {
      "post": {
        "summary": "Draft V1",
        "description": "Generate draft content for sections (API v1).",
        "operationId": "draft_v1_v1_draft_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "section_draft": {
                  "summary": "Draft a mitigation section",
                  "description": "Generates prose for a specific section and outline.",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "osteon",
                    "intent": "draft",
                    "input": {
                      "goal": "Produce a launch readiness brief",
                      "section_title": "Risk mitigation and contingencies",
                      "outline": [
                        "Executive summary",
                        "Architecture readiness",
                        "Risk mitigation and contingencies",
                        "Operational playbooks"
                      ],
                      "context": "Highlight rollback rehearsals and database failover coverage."
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/edit": {
      "post": {
        "summary": "Edit V1",
        "description": "Edit and improve content based on feedback (API v1).",
        "operationId": "edit_v1_v1_edit_post",
