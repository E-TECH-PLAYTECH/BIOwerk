    "/v1/export": {
      "post": {
        "summary": "Export V1",
        "description": "Export the complete artifact with all sections (API v1).",
        "operationId": "export_v1_v1_export_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "final_artifact": {
                  "summary": "Export a finished narrative",
                  "description": "Includes table-of-contents metadata to make the artifact discoverable.",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "osteon",
                    "intent": "export",
                    "input": {
                      "title": "Launch Readiness Narrative",
                      "sections": [
                        {
                          "id": "intro",
                          "title": "Executive summary",
                          "text": "BIOwerk is ready for Q4 launch."
                        },
                        {
                          "id": "ops",
                          "title": "Operational excellence",
                          "text": "Runbooks rehearsed and on-call staffed."
                        }
                      ],
                      "metadata": {
                        "toc": [
                          "Executive summary",
