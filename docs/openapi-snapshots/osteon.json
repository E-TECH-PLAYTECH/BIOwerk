              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/summarize": {
      "post": {
        "summary": "Summarize V1",
        "description": "Summarize content (API v1).",
        "operationId": "summarize_v1_v1_summarize_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "executive_summary": {
                  "summary": "Condense detailed notes",
