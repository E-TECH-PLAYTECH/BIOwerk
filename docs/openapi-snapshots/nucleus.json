        }
      }
    },
    "/v1/finalize": {
      "post": {
        "summary": "Finalize V1",
        "description": "Finalize endpoint (API v1).",
        "operationId": "finalize_v1_v1_finalize_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "final_handoff": {
                  "summary": "Finalize a workflow handoff",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "nucleus",
                    "intent": "finalize",
                    "input": {
                      "workflow_results": [
                        {
                          "agent": "osteon",
                          "status": "ok",
                          "artifact": {
                            "outline": [
                              "Intro",
                              "Risks",
                              "Actions"
                            ]
                          }
                        },
                        {
                          "agent": "synapse",
                          "status": "ok",
                          "slides": 8
                        }
                      ],
                      "goal": "Compile the Q4 readiness pack"
                    },
                    "api_version": "v1"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Reply"
                }
