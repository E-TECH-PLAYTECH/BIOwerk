    "/v1/review": {
      "post": {
        "summary": "Review V1",
        "description": "Review endpoint (API v1).",
        "operationId": "review_v1_v1_review_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Msg"
              },
              "examples": {
                "content_review": {
                  "summary": "Review an artifact with explicit criteria",
                  "value": {
                    "origin": "swagger-ui",
                    "target": "nucleus",
                    "intent": "review",
                    "input": {
                      "content": {
                        "sections": [
                          {
                            "title": "Risks",
                            "text": "Traffic surge is a top risk."
                          }
                        ]
                      },
                      "criteria": [
                        "quality",
                        "risk_coverage",
                        "actionability"
                      ]
